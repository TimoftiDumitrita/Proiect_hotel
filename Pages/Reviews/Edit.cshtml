@page
@model Proiect_hotel.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    background-color: #B0C4DE;
    nav a {
        text-transform: uppercase;
        color: #0056b3;
        font-weight: bold;
        margin: 0 10px;
        text-decoration: none;
    }

    nav a:hover {
        color: #004494;
    }
</style>

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.Id" />
            <div class="form-group">
                <label asp-for="Review.Mesaj" class="control-label"></label>
                <input asp-for="Review.Mesaj" class="form-control" />
                <span asp-validation-for="Review.Mesaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Rate" class="control-label"></label>
                <select asp-for="Review.Rate" class="form-control"></select>
                <span asp-validation-for="Review.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.ClientID" class="control-label"></label>
                <select asp-for="Review.ClientID" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="Review.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
