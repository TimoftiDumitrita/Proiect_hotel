@page
@model Proiect_hotel.Pages.Preturi.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: #B0C4DE;
    }
    nav a {
        text-transform: uppercase;
        color: #0056b3;
        font-weight: bold;
        margin: 0 10px;
        text-decoration: none;
    }

        nav a:hover {
            color: #004494;
        }
</style>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pret[0].StartValidity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret[0].EndValidity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret[0].Price_value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret[0].Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret[0].Nr_persoane)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Pret[0].Camere.NumarCamera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pret) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartValidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndValidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price_value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr_persoane)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Camere.NumarCamera)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
